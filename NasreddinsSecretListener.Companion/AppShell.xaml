<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:NasreddinsSecretListener.Companion.Pages"
    x:Class="NasreddinsSecretListener.Companion.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Scan"   Route="scan" ContentTemplate="{DataTemplate pages:ScanPage}" />
        <ShellContent Title="Status"  Route="status" ContentTemplate="{DataTemplate pages:StatusPage}" />
        <ShellContent Title="Setup" Route="settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
        <ShellContent Title="Log"    ContentTemplate="{DataTemplate pages:LogPage}" />
    </TabBar>
</Shell>
