<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NasreddinsSecretListener.Companion.Pages.StatusPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:NasreddinsSecretListener.Companion.ViewModels"
    x:DataType="viewmodels:ScanViewModel"
    Title="Status">

    <!-- Falls die Converter NICHT global in App.xaml registriert sind,
         kannst du sie hier lokal reinnehmen:
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    -->

    <VerticalStackLayout Padding="16" Spacing="12">

        <!-- groÃŸ & eindeutig -->
        <Label Text="{Binding StatusText}"
               FontSize="22"
               FontAttributes="Bold" />

        <!-- visueller Verbindungsindikator -->
        <BoxView HeightRequest="8"
                 BackgroundColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}" />
    </VerticalStackLayout>
</ContentPage>