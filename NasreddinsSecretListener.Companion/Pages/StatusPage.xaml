<ContentPage
    x:Class="NasreddinsSecretListener.Companion.Pages.StatusPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:NasreddinsSecretListener.Companion.ViewModels"
    x:DataType="viewmodels:ScanViewModel"
    Title="Status">

    <Grid Padding="16"
          RowDefinitions="*,*"
          RowSpacing="12">

        <!-- erste Box (mit Text) -->
        <Grid Grid.Row="0">
            <BoxView BackgroundColor="{Binding StatusText, Converter={StaticResource StatusTextToColorConverter}}" />
            <Label Text="{Binding StatusText, Converter={StaticResource StatusTextColorRemoveConverter}}"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White" />
        </Grid>

        <!-- zweite Box -->
        <BoxView Grid.Row="1"
                 BackgroundColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverterBluetooth}}" />
    </Grid>
</ContentPage>
