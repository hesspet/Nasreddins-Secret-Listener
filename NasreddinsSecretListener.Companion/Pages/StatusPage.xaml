<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NasreddinsSecretListener.Companion.Pages.StatusPage"
             Title="Status">

    <VerticalStackLayout Padding="16" Spacing="12">
        <!-- groÃŸ & eindeutig -->
        <Label Text="{Binding StatusText}"
               FontSize="22"
               FontAttributes="Bold" />

        <!-- optional: visueller Verbindungsindikator -->
        <BoxView HeightRequest="8"
                 BackgroundColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}" />
    </VerticalStackLayout>
</ContentPage>