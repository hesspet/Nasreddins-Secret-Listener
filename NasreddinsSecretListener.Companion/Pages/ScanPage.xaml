<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:NasreddinsSecretListener.Companion.ViewModels"
    xmlns:models="clr-namespace:NasreddinsSecretListener.Companion.Models"
    x:Class="NasreddinsSecretListener.Companion.Pages.ScanPage"
    x:DataType="viewmodels:ScanViewModel"
    Title="Scan">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="BLE-Scan nach Nasreddin-Geräten" FontAttributes="Bold" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Scan starten" Command="{Binding StartScanCommand}" />
            <Button Text="Scan stoppen" Command="{Binding StopScanCommand}" />
            <Button Text="Als mein Gerät markieren" Command="{Binding ClaimSelectedCommand}" />
            <Button Text="Zu meinem Gerät verbinden"
                    Command="{Binding ConnectMyDeviceCommand}"
                    IsEnabled="{Binding HasMyDevice}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Devices}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedDevice, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:NslDevice">
                    <Grid Padding="8"
                          ColumnDefinitions="*,Auto"
                          RowDefinitions="Auto,Auto">

                        <HorizontalStackLayout Spacing="8">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />

                            <Border Padding="4"
                                BackgroundColor="{Binding IsNsl, Converter={StaticResource BoolToColorConverter}}"
                                StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="{Binding IsNsl, Converter={StaticResource NslBadgeTextConverter}}"
                                    TextColor="White" FontSize="12" />
                            </Border>

                            <Border Padding="4"
                                BackgroundColor="#8B8000"
                                IsVisible="{Binding IsMine}"
                                StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="⭐ Mein Gerät" TextColor="White" FontSize="12" />
                            </Border>
                        </HorizontalStackLayout>

                        <Label Grid.Row="1"
                               Text="{Binding Rssi, StringFormat='RSSI {0} dBm'}"
                               FontSize="12"
                               TextColor="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Verbinden &amp; Lauschen" Command="{Binding ConnectAndListenCommand}" />
        <Label Text="{Binding StatusText}" />
    </VerticalStackLayout>
</ContentPage>