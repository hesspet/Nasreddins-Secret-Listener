<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NasreddinsSecretListener.Companion.ViewModels"
             x:Class="NasreddinsSecretListener.Companion.Pages.ScanPage"
             Title="Scan">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="BLE-Scan nach Nasreddin-Geräten" FontAttributes="Bold" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Scan starten" Command="{Binding StartScanCommand}" />
            <Button Text="Scan stoppen" Command="{Binding StopScanCommand}" />
            <Button Text="Als mein Gerät markieren" Clicked="OnClaimClicked" />
            <Button Text="Zu meinem Gerät verbinden" Command="{Binding ConnectMyDeviceCommand}" IsEnabled="{Binding HasMyDevice}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Devices}" SelectionMode="Single" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Frame Padding="4" HasShadow="False" CornerRadius="8"
                                       BackgroundColor="{Binding IsNsl, Converter={StaticResource BoolToColorConverter}}">
                                <Label Text="{Binding IsNsl, Converter={StaticResource NslBadgeTextConverter}}"
                                     TextColor="White" FontSize="12" />
                            </Frame>
                            <Frame Padding="4" HasShadow="False" CornerRadius="8" BackgroundColor="#8B8000"
                                     IsVisible="{Binding IsMine}">
                                <Label Text="⭐ Mein Gerät" TextColor="White" FontSize="12" />
                            </Frame>
                        </HorizontalStackLayout>

                        <Label Grid.Row="1"
             Text="{Binding Rssi, StringFormat='RSSI {0} dBm'}" FontSize="12" TextColor="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Verbinden &amp; Lauschen" Clicked="OnConnectClicked" />
        <Label Text="{Binding StatusText}" />
    </VerticalStackLayout>
</ContentPage>